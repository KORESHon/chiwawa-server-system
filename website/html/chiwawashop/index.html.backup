            }, 3000);
        }

        // Проверка сохраненного доступа при загрузке
        document.addEventListener('DOMContentLoaded', function() {
            // Анимация появления карточек
            const cards = document.querySelectorAll('.card');
            const observer = new IntersectionObserver((entries) => {
                entries.forEach((entry, index) => {
                    if (entry.isIntersecting) {
                        setTimeout(() => {
                            entry.target.style.opacity = '1';
                            entry.target.style.transform = 'translateY(0)';
                        }, index * 100);
                    }
                });
            });

            cards.forEach(card => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';
                card.style.transition = 'all 0.6s ease';
                observer.observe(card);
            });

            // Проверяем сессию
            if (sessionStorage.getItem('chiwawamine_decrypted') === 'true') {
                // Автоматически расшифровываем при перезагрузке
                decryptAndShow();
            }
            
            // Проверяем статус сервисов
            setTimeout(checkServiceStatus, 1000);
            
            // Обработчик Enter
            document.getElementById('secretCode').addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    decryptAndShow();
                }
            });
        });

        // Проверка доступности сервисов
        function checkServiceStatus() {
            const services = [
                { url: 'https://pgadmin.chiwawashop.ru', indicator: document.querySelectorAll('.status-indicator')[0] },
                { url: 'https://phpmyadmin.chiwawashop.ru', indicator: document.querySelectorAll('.status-indicator')[1] }
            ];

            services.forEach(service => {
                fetch(service.url, { mode: 'no-cors' })
                    .then(() => {
                        service.indicator.style.background = '#4caf50';
                    })
                    .catch(() => {
                        service.indicator.style.background = '#f44336';
                    });
            });
        }

        // Закрытие модального окна по клику вне его
        window.onclick = function(event) {
            const modal = document.getElementById('accessModal');
            if (event.target === modal) {
                closeAccessModal();
            }
        }

        // Дополнительные стили для анимаций
        const additionalStyles = document.createElement('style');
        additionalStyles.textContent = `
            @keyframes slideIn {
                from { transform: translateX(100%); opacity: 0; }
                to { transform: translateX(0); opacity: 1; }
            }
            
            @keyframes fadeOut {
                from { opacity: 1; }
                to { opacity: 0; }
            }
        `;
        document.head.appendChild(additionalStyles);

        // Защита от копирования через DevTools
        (function() {
            // Отключаем контекстное меню
            document.addEventListener('contextmenu', e => e.preventDefault());
            
            // Отключаем горячие клавиши
            document.addEventListener('keydown', function(e) {
                // F12, Ctrl+Shift+I, Ctrl+Shift+J, Ctrl+U
                if (e.keyCode === 123 || 
                    (e.ctrlKey && e.shiftKey && (e.keyCode === 73 || e.keyCode === 74)) ||
                    (e.ctrlKey && e.keyCode === 85)) {
                    e.preventDefault();
                    showNotification('🛡️ DevTools отключены для безопасности');
                    return false;
                }
            });
            
            // Обнаружение открытия DevTools
            let devtools = {open: false, orientation: null};
            const threshold = 160;
            setInterval(function() {
                if (window.outerHeight - window.innerHeight > threshold || 
                    window.outerWidth - window.innerWidth > threshold) {
                    if (!devtools.open) {
                        devtools.open = true;
                        console.clear();
                        console.log('%c🛡️ БЕЗОПАСНОСТЬ НАРУШЕНА!', 'color: red; font-size: 50px; font-weight: bold;');
                        console.log('%c⚠️ Попытка доступа к зашифрованным данным обнаружена!', 'color: orange; font-size: 20px;');
                        console.log('%cДанные защищены криптографическим шифрованием.', 'color: blue; font-size: 16px;');
                        
                        // Блокируем страницу при попытке взлома
                        document.body.innerHTML = `
                            <div style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: linear-gradient(135deg, #ff6b6b, #ee5a52); display: flex; align-items: center; justify-content: center; z-index: 9999;">
                                <div style="background: white; padding: 50px; border-radius: 20px; text-align: center; max-width: 500px;">
                                    <h1 style="color: #dc3545; margin-bottom: 20px;">🛡️ ЗАЩИТА АКТИВИРОВАНА</h1>
                                    <p style="color: #333; margin-bottom: 20px;">Обнаружена попытка несанкционированного доступа к зашифрованным данным.</p>
                                    <p style="color: #666;">Для доступа используйте официальный интерфейс с ключом расшифровки.</p>
                                    <button onclick="location.reload()" style="background: linear-gradient(135deg, #667eea, #764ba2); color: white; padding: 15px 30px; border: none; border-radius: 10px; font-weight: 600; cursor: pointer; margin-top: 20px;">🔄 Перезагрузить страницу</button>
                                </div>
                            </div>
                        `;
                    }
                } else {
                    devtools.open = false;
                }
            }, 500);
        })();
    </script>
</body>
</html>
