{
  "name": "chiwawa-server",
  "version": "2.1.0",
  "description": "Приватный Minecraft сервер с веб-интерфейсом",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "echo 'Building for production...'",
    "test": "jest",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "db:create": "node scripts/create-database.js",
    "db:backup": "node scripts/backup.js backup",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop chiwawa-server",
    "pm2:restart": "pm2 restart chiwawa-server",
    "pm2:logs": "pm2 logs chiwawa-server",
    "deploy:configure": "node scripts/deploy.js configure",
    "deploy": "node scripts/deploy.js deploy",
    "docker:build": "docker build -t chiwawa-server .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down"
  },
  "keywords": [
    "minecraft",
    "server",
    "nodejs",
    "postgresql",
    "discord",
    "whitelist"
  ],
  "author": "ebluffy <dima2_05@mail.ru>",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "pg-pool": "^3.6.1",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "uuid": "^9.0.1",
    "morgan": "^1.10.0",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "eslint": "^8.50.0",
    "prettier": "^3.0.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/chiwawa-server.git"
  }
}